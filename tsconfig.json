{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "types": ["node"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
